<mvc:View controllerName="sciloginwidget.controller.main"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:l="sap.ui.layout"
          xmlns:core="sap.ui.core"
          xmlns="sap.m">
    <FlexBox alignItems="Center"
			justifyContent="End"
			class="hboxClass">
    	<items>
        	<core:Icon press="onLogIconPress" id="loginIcon" class="iconClass logonColor" />
        	<Label id="loginGreeting" class="labelClass logonColor" />
        </items>
    </FlexBox>
</mvc:View>