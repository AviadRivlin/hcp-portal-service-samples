<mvc:View controllerName="SCILoginWidget.controller.main"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:l="sap.ui.layout"
          xmlns:core="sap.ui.core"
          xmlns="sap.m">
    <App>
        <pages>
            <Page showHeader="false">
                <content>
                    <Button class="loginButton" id="loginButton" text="Log In" press="onLogin"/>
                    <Button class="logoutButton" id="logoutButton" text="Log Out" press="onLogout"/>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>