<mvc:View controllerName="MapWidget.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:vbm="sap.ui.vbm">
    <App>
        <pages>
            <Page showHeader="false">
                <content>
                    <vbm:GeoMap class="mainMap" id="map" width="100%" height="100%">
                        <vbm:vos>
                            <vbm:Spots>
                                <vbm:Spot id="spot" labelType="Default"/>
                            </vbm:Spots>
                        </vbm:vos>
                    </vbm:GeoMap>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>